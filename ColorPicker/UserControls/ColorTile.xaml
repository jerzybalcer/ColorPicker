<UserControl x:Class="ColorPicker.UserControls.ColorTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorPicker.UserControls" xmlns:colorpicker="clr-namespace:ColorPicker" d:DataContext="{d:DesignInstance Type=colorpicker:PickerViewModel}"
             mc:Ignorable="d" 
             x:Name="UserControl">
    <Grid Margin="15,0,15,30">
        <Rectangle RadiusX="20" RadiusY="20" Opacity="0.5">
            <Rectangle.Fill>
                <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute">
                    <DrawingBrush.Drawing>
                        <GeometryDrawing Geometry="M0,0 H1 V1 H2 V2 H1 V1 H0Z" Brush="LightGray"/>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border x:Name="ColorPresenter" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                Background="{Binding Brush, ElementName=UserControl}" CornerRadius="20">
            <Grid>
                <Label x:Name="ColorHex" Content="{Binding PickedColorHex}" VerticalAlignment="Top" HorizontalAlignment="Right" 
                   FontSize="24" Margin="5,5,45,5" Foreground="{Binding ContrastingColor}"/>
                <Label x:Name="CopyColorHex" Content="📋" VerticalAlignment="Top" HorizontalAlignment="Right" 
                   FontSize="24" Margin="5,5,5,5" Foreground="{Binding ContrastingColor}" Visibility="Visible" 
                    Cursor="Hand"/>
                <Label x:Name="CopiedColorHex" Content="✔" VerticalAlignment="Top" HorizontalAlignment="Right" 
                   FontSize="24" Margin="5,5,5,5" Foreground="{Binding ContrastingColor}" Visibility="Hidden"
                    Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
