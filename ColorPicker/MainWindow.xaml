<Window x:Class="ColorPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorPicker" d:DataContext="{d:DesignInstance Type=local:PickerViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Rectangle Margin="15" Opacity="0.4" MinWidth="100" MinHeight="100">
            <Rectangle.Fill>
                <DrawingBrush TileMode="Tile" Viewport="0,0,20,20" ViewportUnits="Absolute" >
                    <DrawingBrush.Drawing>
                        <GeometryDrawing Geometry="M0,0 H1 V1 H2 V2 H1 V1 H0Z" Brush="LightGray"/>
                    </DrawingBrush.Drawing>
                </DrawingBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Border x:Name="ColorPresenter" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                   Margin="15" Background="{Binding PickedColorBrush}">
            <Label x:Name="ColorHex" Content="{Binding PickedColorHex}" VerticalAlignment="Top" 
                   HorizontalAlignment="Right" FontSize="24" Margin="5" Foreground="{Binding PickedHexTextColor}"/>
        </Border>
        

        <Grid Grid.Row="2" x:Name="Sliders">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" FontSize="18" Content="R" HorizontalAlignment="Center"/>
            <Label Grid.Row="1" Grid.Column="0" FontSize="18" Content="G" HorizontalAlignment="Center"/>
            <Label Grid.Row="2" Grid.Column="0" FontSize="18" Content="B" HorizontalAlignment="Center"/>
            <Label Grid.Row="3" Grid.Column="0" FontSize="18" Content="A" HorizontalAlignment="Center"/>

            <Slider x:Name="RedSlider" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" TickFrequency="1" 
                    IsSnapToTickEnabled="True" Value="{Binding RedValue}" ValueChanged="ColorSlider_ValueChanged"/>
            <Slider x:Name="GreenSlider" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" TickFrequency="1" 
                    IsSnapToTickEnabled="True" Value="{Binding GreenValue}" ValueChanged="ColorSlider_ValueChanged"/>
            <Slider x:Name="BlueSlider" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" TickFrequency="1" 
                    IsSnapToTickEnabled="True" Value="{Binding BlueValue}" ValueChanged="ColorSlider_ValueChanged"/>
            <Slider x:Name="AlphaSlider" Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="255" TickFrequency="1" 
                    IsSnapToTickEnabled="True" Value="{Binding AlphaValue}" ValueChanged="ColorSlider_ValueChanged"/>

            <Label Grid.Row="0" Grid.Column="2" FontSize="18" Content="{Binding ElementName=RedSlider, Path=Value}" HorizontalAlignment="Center"/>
            <Label Grid.Row="1" Grid.Column="2" FontSize="18" Content="{Binding ElementName=GreenSlider, Path=Value}" HorizontalAlignment="Center"/>
            <Label Grid.Row="2" Grid.Column="2" FontSize="18" Content="{Binding ElementName=BlueSlider, Path=Value}" HorizontalAlignment="Center"/>
            <Label Grid.Row="3" Grid.Column="2" FontSize="18" Content="{Binding ElementName=AlphaSlider, Path=Value}" HorizontalAlignment="Center"/>

        </Grid>
        
        
    </Grid>
</Window>
